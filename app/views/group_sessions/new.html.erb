<%= form_with scope: :group_session, url: group_sessions_path, local: true do |form| %>

  <h1>Create New Session</h1>

  <!Error printing>
  <% if @group_session.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @group_session.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    Subject: <br>
    <%= form.text_field :subject %>
  </p>
 
  <p>
    Date and Time: <br>
    <%= form.datetime_select :schedule %>
  </p>

  <p>
    Venue: <br>
    <%= form.text_field :venue %>
  </p> 

  <p>
    Topic: <br>
    <%= form.text_field :topic %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back to session index', group_sessions_path %>