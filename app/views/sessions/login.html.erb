<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
 		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
		<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css?family=IBM+Plex+Sans" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
		
		<%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "lsessions" %>
</head>

<body>

    <div class="overlay"></div>

		<!--LOGO/SMTH
		<nav class="navbar fixed-top">
				<div class="container">
					<div class="navbar-header">
						<a class="navbar-brand" href="#">logo/smth</span></a>
					</div>
				</div>
		</nav> 
		-->

		<!--MAIN CONTENT-->
		<div class="wrapper">
				<div class="container">

						<div class="centered header-form mm">
						<img src="/assets/logo.png" class="logo">
						Mentor Matcher
						</div>

								
								<% if $b == 1 %>
									<div class="err-msg">
										<i class="fa far fa-times"></i>&nbsp&nbsp&nbsp&nbsp User account still pending authentication
									</div>
									
								<% elsif $b == 2 %>
									<div class="err-msg">
									<i class="fa far fa-times"></i>&nbsp&nbsp&nbsp&nbsp User account has expired and is pending renewal
									</div>
									
								<% elsif $b == 3 %>
									<div class="err-msg">
									<i class="fa far fa-times"></i>&nbsp&nbsp&nbsp&nbsp Invalid Password
									</div>
									
								<% elsif $b == 4 %>
									<div class="err-msg">
									<i class="fa far fa-times"></i>&nbsp&nbsp&nbsp&nbsp No such user exists<br>
									</div>
									
								<% end %>
								</div>

								<%= form_tag(:action => 'login_attempt') do %>   
										<div class="login"> 
												<div class="centered input-field">
														<span class="icon fa fa-user">
														<%= text_field_tag :username, nil, type: 'username', class: 'input', placeholder: 'Username', required: true, autofocus: true %>
														</span>
												</div>
												<br>
												<div class="centered input-field">
														<span class="icon fa fa-lock">
														<%= password_field_tag :password, nil, type: 'password', class: 'input', placeholder: 'Password', required: true %>
														</span>
												</div>
												<br>
												<div class="centered">
												<%= submit_tag('Log in', class: "login-btn") %>
												</div>
										</div>
								<% end %>
		
								<div class="centered">
								<br><br><br>
								<p class="note">Don't have an account? <a href="/users/new" style="font-weight:bold">Sign Up</a>.</p>
								</div>

						</div>
				</div>
		</div>

		<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>